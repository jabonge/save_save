<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="18dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#747474"
            android:lineSpacingExtra="12sp"
            android:includeFontPadding="false"
            android:fontFamily="@font/notosanscjkkrbold"
            android:text="하승완"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:includeFontPadding="false"
            android:textColor="#747474"
            android:lineSpacingExtra="9sp"

            android:text="님, 안녕하세요!"
            android:gravity="center_vertical"
            android:fontFamily="@font/notosanscjkkrmedium"
            android:layout_marginBottom="2dp"

            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/electric"
        android:layout_width="328dp"
        android:layout_height="105dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingBottom="5dp"
        android:background="@drawable/btn_electric">
        <ImageView
            android:id="@+id/electover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_over"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="12dp"
            android:visibility="invisible"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="26dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="6sp"
                android:id="@+id/electDday"
                android:includeFontPadding="false"
                android:fontFamily="@font/regular"
                android:text="D-12"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="10dp"

            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#ffffff"
                android:includeFontPadding="false"
                android:fontFamily="@font/regular"
                android:lineSpacingExtra="6sp"
                android:layout_marginRight="3dp"
                android:text="목표 사용량"
                />


            <TextView
                android:id="@+id/electGoalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#ffffff"
                android:includeFontPadding="false"
                android:lineSpacingExtra="6sp"
                android:layout_marginRight="1dp"
                android:fontFamily="@font/regular"
                android:text="18,000"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#ffffff"
                android:includeFontPadding="false"
                android:lineSpacingExtra="6sp"
                android:fontFamily="@font/regular"
                android:text="원"
                />
            </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                >
            <TextView
                android:id="@+id/electPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textSize="28sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="13sp"
                android:layout_marginLeft="1dp"
                android:fontFamily="@font/notosanscjkkrbold"

                android:text="9,800"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="1dp"
                android:includeFontPadding="false"
                android:lineSpacingExtra="13sp"
                android:gravity="center_vertical"
                android:fontFamily="@font/notosanscjkkrbold"
                android:text="원 사용"
                />
            </LinearLayout>
            </RelativeLayout>
        </LinearLayout>



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/water"
        android:layout_width="328dp"
        android:layout_height="105dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingBottom="5dp"
        android:background="@drawable/btn_water">
        <ImageView
            android:id="@+id/waterover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_over"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="12dp"
            android:visibility="visible"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="26dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="6sp"
                android:id="@+id/waterDday"
                android:includeFontPadding="false"
                android:fontFamily="@font/regular"
                android:text="D-22"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="10dp"

            >
            <RelativeLayout
                android:id="@+id/goal2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#ffffff"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/regular"
                        android:lineSpacingExtra="6sp"
                        android:layout_marginRight="3dp"
                        android:text="목표 사용량"
                        />


                    <TextView
                        android:id="@+id/waterGoalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#ffffff"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="6sp"
                        android:layout_marginRight="1dp"
                        android:fontFamily="@font/regular"
                        android:text="18,000"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#ffffff"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="6sp"
                        android:fontFamily="@font/regular"
                        android:text="원"
                        />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    >
                    <TextView
                        android:id="@+id/waterPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:textSize="28sp"
                        android:textColor="#ffffff"
                        android:lineSpacingExtra="13sp"
                        android:layout_marginLeft="1dp"
                        android:fontFamily="@font/notosanscjkkrbold"

                        android:text="19,800"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="28sp"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="1dp"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="13sp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/notosanscjkkrbold"
                        android:text="원 사용"
                        />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/gas"
        android:layout_width="328dp"
        android:layout_height="105dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/btn_gas"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="18dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/txt_untilnow"
            android:layout_marginBottom="-10dp"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_underline"
                android:layout_gravity="bottom"
                android:layout_marginBottom="4dp"
                />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#747474"
                android:lineSpacingExtra="-6sp"
                android:fontFamily="@font/notosanscjkkrbold"
                android:includeFontPadding="false"
                android:text="총"
                />
            <TextView
                android:id="@+id/savePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#747474"
                android:lineSpacingExtra="-6sp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/notosanscjkkrbold"
                android:includeFontPadding="false"
                android:text="28,700"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/txt_total_won"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#747474"
            android:lineSpacingExtra="0sp"
            android:fontFamily="@font/notosanscjkkrmedium"
            android:includeFontPadding="false"
            android:text="SAVE&amp;SAVE했네요!"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_coin"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"/>
        <ImageView
            android:id="@+id/donate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_donate"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>





</LinearLayout>